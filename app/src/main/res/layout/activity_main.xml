<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".view.MainActivity"
    tools:layout_editor_absoluteY="25dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="218dp"
        android:layout_height="344dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9"
        android:contentDescription="@string/botao_jogar"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btJogar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bk_android" />

    <Button
        android:id="@+id/btJogar"
        android:layout_width="207dp"
        android:layout_height="89dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/bk_button"
        android:text="@string/txt_jogar"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/tvPontuacao"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvPontuacao" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="71dp"
        android:layout_height="17dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/txt_pontuacao"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/tvPontuacao"
        app:layout_constraintEnd_toEndOf="@+id/tvPontuacao"
        app:layout_constraintStart_toStartOf="@+id/tvPontuacao" />

    <TextView
        android:id="@+id/tvPontuacao"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/pontuacao_inicial"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="309dp"
        android:layout_height="110dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/logo_do_kotlinando"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btJogar"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/img_button_restart"
        android:layout_width="55dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:onClick="img_buttonClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_restart" />

</android.support.constraint.ConstraintLayout>